 <% @product.reviews.each do |review| %>
    <div class="review">
      <div class = "poster">
        <% if review.user != nil %>
          by <%= review.user.name %> Added on: <%= review.created_at %>
          <p class="comment">
            <%= review.comment %>
          </p>
        <% end %>
      </div>
    </div>
  <% end %>